# Environment configuration for Magang Berdampak API
# Copy this file to .env and modify the values

# Environment (development, production, testing)
ENVIRONMENT=development

# API Security
MAGANG_API_KEY=your-super-secret-api-key-change-this-in-production

# Database Configuration
DATABASE_PATH=database/magang_data.db
CACHE_PATH=database/detail_cache.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Scraper Configuration
SCRAPER_MAX_CONCURRENT=25
SCRAPER_RETRY_COUNT=3
SCRAPER_RETRY_DELAY=2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=*

# Optional: External database URL (if not using SQLite)
# DATABASE_URL=postgresql://user:password@localhost/dbname 